<Page x:Class="PostOffice.View.PageStatistic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostOffice.View" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStatistic">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <StackPanel Background="#a7c3c6">
                <TextBlock HorizontalAlignment="Left" Width="220" Padding="0 10 0 5" >
                    <InlineUIContainer>
                        <TextBlock Padding="0 5 0 0" Text="Почтовое отделение Статистика" Background="AliceBlue" TextAlignment="Center" TextWrapping="Wrap" Height="60" VerticalAlignment="Center" Width="218" HorizontalAlignment="Left" FontSize="18">
                            
                        </TextBlock>
                    </InlineUIContainer>
                </TextBlock>
                <Border Background="AliceBlue" Margin="5 10 5 0">
                    <StackPanel Height="300">
                        <Button FontSize="16" Background="AliceBlue" Height="30" Margin="0 0 0 10" Click="ButtonSubsribesStatic">Подписчики изданий</Button>
                        <Button FontSize="16" Background="AliceBlue" Height="50" Margin="0 0 0 10" Click="ButtonCorrespondenceStatic">
                            <TextBlock TextWrapping="Wrap" Width="160" >
                                Движение корреспонденции
                            </TextBlock>
                        </Button>
                        <Button Background="AliceBlue" FontSize="16" Height="30" Margin="0 0 0 10" Click="ButtonExit">Назад</Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="179*"/>
            </Grid.RowDefinitions>
            <Border Background="#a7c3c6" BorderBrush="Black" BorderThickness="1">
                <StackPanel Orientation="Horizontal" Name="spLogin" HorizontalAlignment="Right">
                    <Button Height="45" Background="AliceBlue" Click="btnEntrance" Margin="0 0 5 0" >
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Label Name="lbLogin" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"></Label>
                            <materialDesign:PackIcon Height="35" Width="35" Kind="AccountCircle" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <Frame Grid.Row="1" Name="frameToAction">

            </Frame>
        </Grid>
    </Grid>
</Page>
