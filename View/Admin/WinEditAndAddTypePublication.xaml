<Window x:Class="PostOffice.View.Admin.WinEditAndAddTypePublication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PostOffice.View.Admin"
        mc:Ignorable="d"
        Title="Почтовое отделение" Height="200" Width="400" Background="#a7c3c6" MinHeight="210" MaxHeight="210" MinWidth="400" MaxWidth="400">
    <Grid>
        <StackPanel Margin="15">
            <TextBox FontSize="14" Text="{Binding Name}" materialDesign:HintAssist.HelperText="Наименование" materialDesign:HintAssist.HelperTextFontSize="14"></TextBox>
            <Button Margin="0 50 0 0" Background="AliceBlue" Click="Button_Save">Сохранить</Button>
            <Button Margin="0 5 0 0" Background="AliceBlue" Click="Button_Exit">Закрыть</Button>
        </StackPanel>
    </Grid>
</Window>
