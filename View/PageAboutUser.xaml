<Page x:Class="PostOffice.View.PageAboutUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PostOffice.View"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="500"
      Title="PageAboutUser"  Background="#a7c3c6">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Margin=" 5 2 5 0" VerticalAlignment="Center" FontSize="14" Kind="User"/>
                <TextBox IsReadOnly="True" Text="{Binding Login}" FontSize="14" Width="200" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"  materialDesign:HintAssist.Hint="Логин" Name="tbLogin" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <materialDesign:PackIcon Margin="5 2 5 0" VerticalAlignment="Center" FontSize="14" Kind="Password"/>
                <PasswordBox FontSize="14" Width="200" VerticalContentAlignment="Center" Name="tbPassword" materialDesign:HintAssist.Hint="Пароль" Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}" />
            </StackPanel>
            <Button Background="AliceBlue" Click="Button_Exit" Margin="10 0">Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
